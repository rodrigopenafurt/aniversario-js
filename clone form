    text-align: center;

    label {
        display: block;  // Adicionando essa linha para o label ficar em bloco (abaixo do input)
    }

    input {
        display: block;  // Adicionando essa linha para o input ficar em bloco (abaixo do label)
        margin: 20px 0;
        width: 40%;
        font-size: 20px;
    }

    button {
        display: block;
        text-align: center;
        margin: 0 auto;
